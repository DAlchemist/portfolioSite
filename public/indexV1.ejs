		 <script type="text/javascript" src="js/lib/shiro/shiro-class.js"></script>
		 <script type="text/javascript" src="js/lib/shiro/shiro-eventemitter.js"></script>
		<script type="text/javascript">
			$(document).ready(function(){
			
			var previousPos = 0;
			$('.button').click(function(){
				
				var currentPos = $(this).index();
				var distance = (currentPos - previousPos)*600;
				var ImplantString = distance.toString();
				var assembeled;
				
				if (distance<0) {
					assembeled = "-="+ImplantString.substring(1);
				}
				else{
					assembeled = "+="+ImplantString;
				}
				
				$('.view').find(".page").animate({top: assembeled},500);
				previousPos = $(this).index();
				
			})
			
			
		}); //end ready	
		</script>
	</body>
</html>